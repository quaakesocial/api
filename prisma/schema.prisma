generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id
  username   String   @unique
  password   String
  email      String   @unique
  joinDate   DateTime @default(now())
  posts      Post[]
}

model Post {
  id         String     @id
  content    String
  loves      String     @default("[]")
  author     User       @relation(fields: [authorId], references: [id])
  authorId   String
}
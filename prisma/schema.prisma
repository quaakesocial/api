generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id
  username   String   @unique
  password   String
  email      String   @unique
  joinDate   DateTime @default(now())
  posts      Post[]
  comments   Comment[]
}

model Post {
  id         String     @id
  content    String
  loves      String     @default("[]")
  createDate DateTime   @default(now())
  Comments   Comment[]
  author     User       @relation(fields: [authorId], references: [id])
  authorId   String
}

model Comment {
  id          String      @id
  content     String
  createDate  DateTime    @default(now())
  author      User        @relation(fields: [authorId], references: [id])
  authorId    String
  post        Post        @relation(fields: [authorId], references: [id])
  postId      String
}